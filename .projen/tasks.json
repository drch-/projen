{
  "tasks": {
    "compile": {
      "name": "compile",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "jsii --silence-warnings=reserved-word --no-fix-peer-dependencies"
        },
        {
          "shell": "jsii-docgen"
        }
      ],
      "description": "Only compile"
    },
    "test": {
      "name": "test",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "jest --passWithNoTests --updateSnapshot"
        },
        {
          "subtask": "eslint"
        }
      ],
      "description": "Run tests"
    },
    "build": {
      "name": "build",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "subtask": "compile"
        },
        {
          "subtask": "test"
        },
        {
          "subtask": "package"
        },
        {
          "subtask": "readme-macros"
        }
      ],
      "description": "Full release build (test+compile)"
    },
    "bump": {
      "name": "bump",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "yarn run --silent no-changes || standard-version"
        }
      ],
      "description": "Commits a bump to the package version based on conventional commits"
    },
    "release": {
      "name": "release",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "yarn run --silent no-changes || (yarn run bump && git push --follow-tags origin master)"
        }
      ],
      "description": "Bumps version & push to master"
    },
    "test:watch": {
      "name": "test:watch",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "jest --watch"
        }
      ],
      "description": "Run jest in watch mode"
    },
    "test:update": {
      "name": "test:update",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "jest --updateSnapshot"
        }
      ],
      "description": "Update jest snapshots"
    },
    "projen:upgrade": {
      "name": "projen:upgrade",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "yarn upgrade -L projen"
        },
        {
          "shell": "CI=\"\" yarn projen"
        }
      ],
      "description": "upgrades projen to the latest version"
    },
    "watch": {
      "name": "watch",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "jsii -w --silence-warnings=reserved-word --no-fix-peer-dependencies"
        }
      ],
      "description": "Watch & compile in the background"
    },
    "package": {
      "name": "package",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "jsii-pacmak"
        }
      ],
      "description": "Create an npm tarball"
    },
    "eslint": {
      "name": "eslint",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern src test"
        }
      ],
      "description": "Runs eslint against the codebase"
    },
    "compat": {
      "name": "compat",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "jsii-diff npm:$(node -p \"require('./package.json').name\") -k --ignore-file .compatignore || (echo \"\nUNEXPECTED BREAKING CHANGES: add keys such as 'removed:constructs.Node.of' to .compatignore to skip.\n\" && exit 1)"
        }
      ],
      "description": "Perform API compatibility check against latest version"
    },
    "docgen": {
      "name": "docgen",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "jsii-docgen"
        }
      ],
      "description": "Generate API.md from .jsii manifest"
    },
    "readme-macros": {
      "name": "readme-macros",
      "env": {
        "PATH": "$(npx -c 'echo $PATH')"
      },
      "steps": [
        {
          "shell": "mv README.md README.md.bak"
        },
        {
          "shell": "cat README.md.bak | markmac > README.md"
        },
        {
          "shell": "rm README.md.bak"
        }
      ],
      "description": "readme-macros"
    }
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\"."
}